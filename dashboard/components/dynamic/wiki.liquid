<!DOCTYPE html>
<html>

<head>
    {% render 'partials/header.liquid', client: client, user: user %}
</head>

<body class="bg-primary-100 font-body text-white">
    {% render 'partials/navbar.liquid', client: client, user: user %}
    <div class="w-8/12 mx-auto">
        <div class="flex flex-wrap justify-center mt-10 items-center">
            <img class="rounded-full mr-2 duration-300 drop-show-md h-20 hover:opacity-90 hover:scale-105"
                src="/public/imgs/transparentlogo.png" />
                <p class="text-3xl md:text-5xl text-center font-semibold">Welcome to Stick Surf Wiki</p>
        </div>
        <div class="flex justify-center my-8">
            <input id="searchBar"
                class="border-2 border-primary-200 rounded-lg py-4 px-5 text-primary-600 mx-2 md:w-6/12 outline-none bg-primary-100"
                placeholder="lolface" />
                <a onclick="searchImage()" class="lg:hidden cursor-pointer bg-primary-400 hover:opacity-70 duration-300 rounded-lg ml-1 flex items-center px-4 font-semibold shadow-md"
                >Search</a>
        </div>
        <hr class="border-primary-300 w-8/12 mx-auto my-5" />
        <div class="flex justify-center mx-auto mb-7 mt-14">
            <a onclick="prev()"
                class="rounded-l-lg cursor-pointer py-2 px-3 bg-primary-200 hover:opacity-60 duration-100"><i
                    class="fa-solid fa-caret-left"></i></a>
            {% for pg in nextPages %}
            <a onclick="goTopage('{{pg}}')"
                class="py-2 px-3 bg-primary-200 cursor-pointer hover:opacity-60 duration-100">{{ pg }}</a>
            {% endfor %}
            <a class="py-2 px-3 bg-primary-200">...</a>
            <a onclick="goTopage('{{max}}')"
                class="cursor-pointer py-2 px-3 bg-primary-200 hover:opacity-60 duration-100">{{ max }}</a>
            <a onclick="next()"
                class="cursor-pointer py-2 rounded-r-lg px-3 bg-primary-200 hover:opacity-60 duration-100"><i
                    class="fa-solid fa-caret-right"></i></a>
        </div>

        {% for item in items %}
        <div class="flex justify-center">
            <div class="bg-primary-200 rounded-xl my-3 py-5 px-6 w-72 md:w-9/12 md:flex items-center">
                <img class="w-26 h-24" src="public/imgs/items/wiki/{{ item.id }}.png" />
                <div>
                    <p class="text-md md:text-xl font-semibold">{{ item.name }}</p>
                    <p class="text-sm md:text-base">{{ item.story }}</p>
                    <p class="text-sm md:text-base text-primary-400">By: <b>{{ item.creator }}</b></p>
                    <div class="flex flex-wrap mt-2">
                        <p class="rounded-xl py-1 px-3 bg-primary-400 font-bold w-fit mr-2">{{ item.kind }}</p>
                        {% if item.type == "premium" %}
                        <p class="rounded-xl text-black py-1 px-3 bg-[#C9C900] font-bold w-fit mr-2">{{ item.type }}</p>
                        {% elsif item.type == "rare" %}
                        <p class="rounded-xl py-1 px-3 bg-[#466901] font-bold w-fit mr-2">{{ item.type }}</p>
                        {% elsif item.type == "legacy" %}
                        <p class="rounded-xl py-1 px-3 bg-purple-600 font-bold w-fit mr-2">{{ item.type }}</p>
                        {% elsif item.type == "deluxe" %}
                        <p class="rounded-xl py-1 px-3 bg-red-600 font-bold w-fit mr-2">{{ item.type }}</p>
                        {% elsif item.type == "unique" %}
                        <p class="rounded-xl py-1 px-3 bg-[#0099FF] font-bold w-fit mr-2">{{ item.type }}</p>
                        {% elsif item.type == "normal" %}
                        <p class="rounded-xl py-1 px-3 bg-gray-600 font-bold w-fit mr-2">{{ item.type }}</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <p class="text-2xl my-44 text-center font-semibold">There're no more items in the wiki</p>
        {% endfor %}
        <div class="flex justify-center mx-auto mb-7 mt-14">
            <a onclick="prev()"
                class="rounded-l-lg cursor-pointer py-2 px-3 bg-primary-200 hover:opacity-60 duration-100"><i
                    class="fa-solid fa-caret-left"></i></a>
            {% for pg in nextPages %}
            <a onclick="goTopage('{{pg}}')"
                class="py-2 px-3 bg-primary-200 cursor-pointer hover:opacity-60 duration-100">{{ pg }}</a>
            {% endfor %}
            <a class="py-2 px-3 bg-primary-200">...</a>
            <a onclick="goTopage('{{max}}')"
                class="cursor-pointer py-2 px-3 bg-primary-200 hover:opacity-60 duration-100">{{ max }}</a>
            <a onclick="next()"
                class="cursor-pointer py-2 rounded-r-lg px-3 bg-primary-200 hover:opacity-60 duration-100"><i
                    class="fa-solid fa-caret-right"></i></a>
        </div>
    </div>
    <footer>
        <script src="./public/scripts/wiki.js"></script>
        {% render 'partials/footer.liquid' %}
    </footer>
</body>

</html>